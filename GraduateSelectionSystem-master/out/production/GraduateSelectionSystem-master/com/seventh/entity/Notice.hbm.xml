<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.seventh.entity.Notice" table="notice">
		<id name="id" column="id" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="title" column="title" type="string"></property>
		<property name="author" column="author" type="string"></property>
		<property name="createTime" column="createTime" type="timestamp"></property>
		<property name="content" column="content" type="text"></property>
	</class>
</hibernate-mapping>